<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_result"
        android:layout_width="180dp"
        android:layout_centerHorizontal="true"
        android:layout_height="52dp"
        android:backgroundTint="@color/color_2"
        android:text="@string/button_0"
        android:layout_margin="8dp"
        android:textSize="20sp"
        android:autoSizeMinTextSize="4sp"
        android:maxLines="1"
        android:ellipsize="start"
        android:autoSizeTextType="uniform"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/hint_text"
        android:textColorHint="@color/black"
        android:textSize="64sp"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:ellipsize="start"
        android:autoSizeTextType="uniform"
        android:layout_above="@id/solution_tv" />

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_text"
        android:textSize="36sp"
        android:textColor="@color/gray"
        android:textAlignment="textEnd"
        android:layout_margin="8dp"
        android:maxLines="1"
        android:ellipsize="start"
        android:autoSizeTextType="uniform"
        android:layout_above="@id/buttons_layout"/>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        android:paddingVertical="16sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_c"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_3"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_AC"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_3"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_close_bracket"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_close_bracket"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_2"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_divide"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange_2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_7"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_8"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_9"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_multiply"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange_2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_4"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_5"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_6"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_plus"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange_2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_1"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_2"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_3"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_minus"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange_2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_bracket"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_open_bracket"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_2"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_0"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_dot"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/color_2"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="@string/button_equals"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange_1"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>